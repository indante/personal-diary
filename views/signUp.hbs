<style>
body {
    margin: 0;
    padding: 0;
    background: url(/diary2.jpg) no-repeat center center fixed;
    background-size: cover;
    font-family: sans-serif;
    height: 300px;
}

label {
    color: white; 
    font-weight: bold;
}

.signUpBox {
    width: 150px;
    color: white;
    top: 50%;
    left: 50%;
    position: absolute;
    transform: translate(-50%,-50%);
    text-align: center;
}

.signUpBox h2{
    text-align: center;
    font-size: 40px;
    font-weight: bold;
    border-bottom: 6px solid lightseagreen;
}

.form-control {
    text-align: center;
}
</style>

<div class="signUpBox">
<form action="/signUp" method="POST">
    <h2>Sign up</h2>
    <label for="username">username</label>
    <input type="text" name="username" class="form-control" autofocus="true">
    <label for="password">password</label>
    <input type="password" name="password" class="form-control"><br>
    <button class="btn btn-info" type="submit">Submit</button>
    <p>{{{ message }}}</p>
</form>
</div>